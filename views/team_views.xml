<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    ============================================================================
    MAINTENANCE TEAM VIEWS
    ============================================================================

    File: views/team_views.xml
    Model: maintenance.team
    Priority: MEDIUM (supporting model for Equipment and Request)

    VIEWS TO IMPLEMENT:
    1. Form View - Team details with member management
    2. Tree View - Team listing with counts
    3. Kanban View - Team cards with request badges
    4. Search View - Search and filters

    KEY FEATURES:
    - member_ids should use many2many_tags widget
    - Smart buttons for requests and equipment counts
    - Color picker for team color
    ============================================================================
    -->

    <!-- ===================================================================== -->
    <!-- FORM VIEW                                                             -->
    <!-- ===================================================================== -->
    <!--
    INSTRUCTIONS:
    - Header with smart buttons (Requests, Equipment)
    - Team name prominent at top
    - Member management with many2many_tags or kanban widget
    - Chatter at bottom for team communication

    SMART BUTTONS:
    1. "Requests" button - shows open_request_count, opens filtered requests
    2. "Equipment" button - shows equipment_count, opens filtered equipment

    EXAMPLE STRUCTURE:
    ```xml
    <form string="Maintenance Team">
        <sheet>
            <div class="oe_button_box" name="button_box">
                <button name="action_view_requests" type="object"
                        class="oe_stat_button" icon="fa-wrench">
                    <field name="open_request_count" widget="statinfo" string="Requests"/>
                </button>
                <button name="action_view_equipment" type="object"
                        class="oe_stat_button" icon="fa-cogs">
                    <field name="equipment_count" widget="statinfo" string="Equipment"/>
                </button>
            </div>
            <div class="oe_title">
                <h1><field name="name" placeholder="Team Name..."/></h1>
            </div>
            <group>
                <group>
                    <field name="color" widget="color_picker"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </group>
            </group>
            <notebook>
                <page string="Members" name="members">
                    <field name="member_ids" widget="many2many_tags"
                           options="{'color_field': 'color'}"
                           placeholder="Add team members..."/>
                </page>
            </notebook>
        </sheet>
        <div class="oe_chatter">
            <field name="message_follower_ids"/>
            <field name="activity_ids"/>
            <field name="message_ids"/>
        </div>
    </form>
    ```
    -->
    <record id="maintenance_team_form" model="ir.ui.view">
        <field name="name">maintenance.team.form</field>
        <field name="model">maintenance.team</field>
        <field name="arch" type="xml">
            <form string="Maintenance Team">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_requests" icon="fa-wrench">
                            <field string="Requests" name="open_request_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_equipment" icon="fa-cogs">
                            <field string="Equipment" name="equipment_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Team Name..."/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="active" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Members" name="members">
                            <field name="member_ids" widget="many2many_tags"
                                   placeholder="Add team members..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ===================================================================== -->
    <!-- TREE VIEW                                                             -->
    <!-- ===================================================================== -->
    <!--
    INSTRUCTIONS:
    - Show team name, member count, request counts
    - Color indicator optional
    -->
    <record id="maintenance_team_tree" model="ir.ui.view">
        <field name="name">maintenance.team.tree</field>
        <field name="model">maintenance.team</field>
        <field name="arch" type="xml">
            <tree string="Maintenance Teams">
                <field name="name"/>
                <field name="member_ids" widget="many2many_tags"/>
                <field name="open_request_count" string="Open Requests"/>
                <field name="equipment_count" string="Equipment"/>
            </tree>
        </field>
    </record>

    <!-- ===================================================================== -->
    <!-- KANBAN VIEW                                                           -->
    <!-- ===================================================================== -->
    <!--
    INSTRUCTIONS:
    - Team cards with color
    - Show member avatars
    - Badge with open request count
    - Click to open team form

    EXAMPLE:
    ```xml
    <kanban class="o_kanban_mobile">
        <field name="name"/>
        <field name="color"/>
        <field name="open_request_count"/>
        <templates>
            <t t-name="kanban-box">
                <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click">
                    <div class="o_kanban_record_top">
                        <div class="o_kanban_record_headings">
                            <strong class="o_kanban_record_title">
                                <field name="name"/>
                            </strong>
                        </div>
                    </div>
                    <div class="o_kanban_record_bottom">
                        <div class="oe_kanban_bottom_left">
                            <span class="badge rounded-pill">
                                <field name="open_request_count"/> Requests
                            </span>
                        </div>
                    </div>
                </div>
            </t>
        </templates>
    </kanban>
    ```
    -->
    <record id="maintenance_team_kanban" model="ir.ui.view">
        <field name="name">maintenance.team.kanban</field>
        <field name="model">maintenance.team</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="color"/>
                <field name="open_request_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_kanban_card">
                            <div class="o_kanban_record_top">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <span class="badge rounded-pill bg-primary">
                                    <field name="open_request_count"/> Requests
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ===================================================================== -->
    <!-- SEARCH VIEW                                                           -->
    <!-- ===================================================================== -->
    <record id="maintenance_team_search" model="ir.ui.view">
        <field name="name">maintenance.team.search</field>
        <field name="model">maintenance.team</field>
        <field name="arch" type="xml">
            <search string="Search Teams">
                <field name="name"/>
                <field name="member_ids"/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_company" string="Company"
                            context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ===================================================================== -->
    <!-- ACTION                                                                -->
    <!-- ===================================================================== -->
    <record id="maintenance_team_action" model="ir.actions.act_window">
        <field name="name">Maintenance Teams</field>
        <field name="res_model">maintenance.team</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="maintenance_team_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first maintenance team
            </p>
            <p>
                Teams group technicians who handle specific types of equipment
                (e.g., Mechanics, IT Support, Electricians).
            </p>
        </field>
    </record>

</odoo>
